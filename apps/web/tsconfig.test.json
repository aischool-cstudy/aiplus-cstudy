    "src/lib/analytics/error-breakdown.ts",
    "src/lib/analytics/error-breakdown.test.ts",
    "src/lib/curriculum/language.ts",
    "src/lib/curriculum/language.test.ts",
    "src/lib/curriculum/concept-signal.ts",
    "src/lib/curriculum/concept-signal.test.ts",
    "src/lib/runtime/request-lock.ts",
    "src/lib/runtime/request-lock.test.ts",
    "src/lib/practice/client.ts",
    "src/lib/practice/client.test.ts"
